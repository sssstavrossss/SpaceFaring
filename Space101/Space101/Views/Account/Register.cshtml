@model Space101.ViewModels.IdentityViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="headers">
    <h2>@ViewBag.Title</h2><h2>Create a new account</h2>
</div>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <br />
    <hr />
    <br />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-xs-3 control-label" })
        <div class="col-xs-9">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-xs-3 control-label", autocomplete = "off" })
        <div class="col-xs-9">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NickName, new { @class = "col-xs-3 control-label" })
        <div class="col-xs-9">
            @Html.TextBoxFor(m => m.NickName, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.NickName, "", new { @class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-xs-3 control-label" })
        <div class="col-xs-9">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-xs-3 control-label" })
        <div class="col-xs-9">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-xs-3 control-label" })
        <div class="col-xs-9">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", autocomplete = "off"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-xs-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@Styles.Render("~/Content/custom/userForms.css")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}