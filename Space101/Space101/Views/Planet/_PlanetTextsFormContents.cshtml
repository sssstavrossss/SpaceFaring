
@model Space101.ViewModels.PlanetViewModels.PlanetAssetsFormViewModel

<div class="planet-texts-form-group">

    <button type="button" class="btn btn-lg btn-block" data-toggle="collapse" data-target="#texts">
        Manage Planet Text Files
    </button>
    <div id="texts" class="collapse">
        <br />

        <div class="form-group">
            @Html.Label("Planet History", new { @class = "col-form-label", })
            @Html.TextAreaFor(p => p.History, new { @class = "form-control", placeholder = "Add information about planet's History", rows = 5 })
        </div>

        <div class="form-group">
            @Html.Label("Planet Culture", new { @class = "col-form-label", })
            @Html.TextAreaFor(p => p.Culture, new { @class = "form-control", placeholder = "Add information about planet's Culture", rows = 5 })
        </div>

        <div class="form-group">
            @Html.Label("Planet Things to Do", new { @class = "col-form-label"})
            @Html.TextAreaFor(p => p.ToDo, new { @class = "form-control", placeholder = "Add information about planet's Things to Do" , rows = 5 })
        </div>

    </div>
</div>
<br />
