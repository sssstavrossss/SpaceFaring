@using Microsoft.AspNet.Identity
@model List<Space101.ViewModels.UserFavoriteViewModels.UserFavoriteViewModel>

<div class="row header">

    <h2>
        <span>
        @if (Model.Count > 0)
        {
            @Model.Count
        } else
        {
            @:No
        }
        </span>
    Favorites</h2>

</div>

<div class="main">

    @foreach (var favorite in Model)
    {
    <div class="card-div">
        <div class="field-div">
            <div class="col-xs-1">
                <img src="~/images/internet.png" />
            </div>
            <div class="col-xs-11">
                From @favorite.Departure.Name
            </div>
        </div>
        <div class="field-div">
            <div class="col-xs-1">
                <img src="~/images/internet.png" />
            </div>
            <div class="col-xs-11">
                To @favorite.Destination.Name
            </div>
        </div>
        <div class="field-div">
            <div class="col-xs-1">
                <img src="~/images/dollar.png" />
            </div>
            <div class="col-xs-11">
                @favorite.BasePrice $
            </div>
        </div>
        <div class="field-div">
            <div class="col-xs-1">
                <img src="~/images/timetable.png" />
            </div>
            <div class="col-xs-11">
                Date @favorite.Date
            </div>
        </div>
        <div class="field-div btn-div" style="text-align: center;">
            <div class="col-xs-6 details">
                <a href="/UserFlights/Flights/id=@favorite.FlightID">Details</a>
            </div>
            <div class="col-xs-6 book">
                <a href="/Flight/ChooseSeats/@favorite.FlightID">Book</a>
            </div>
        </div>
        <div class="field-div btn-div favorite" style="text-align: center;" data-favorite-id="@favorite.UserFavoriteID" data-flight-id="@favorite.FlightID">
            <div class="col-xs-12 favor">
                Unfavorite
            </div>
        </div>
    </div>
    }

</div>

@Styles.Render("~/Content/custom/userFavorites.css")

@section scripts {
    
    @Scripts.Render("~/bundles/userFavorites")

    <script>
        $(document).ready(function () {
            UserFavoriteController.init();
        });
    </script>

}