@model Space101.ViewModels.ClimateViewModels.ClimateFormViewModel
@{
    ViewBag.Title = "ClimateForm";
}
<br />
@if (Model.Action == "New")
{
    <h2>Create New Climate</h2>
}
else
{
    <h2>Edit Climate With Id: @Model.Id</h2>
}
<br />
@using (Html.BeginForm("Save", "Climate"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(c => c.Id)

    <div class="row">

        <div class="col-md-4 col-lg-4 col-sm-12 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(c => c.Name, new { @class = "col-form-label" })*
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control", placeholder = "e.g. Arid"})
                @Html.ValidationMessageFor(c => c.Name)
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-4 col-lg-4 col-sm-12 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(c => c.Color, new { @class = "col-form-label" })
                @Html.TextBoxFor(c => c.Color, new { @class = "form-control", @type = "color" })
                @Html.ValidationMessageFor(c => c.Color)
            </div>
        </div>

    </div>
    <br />
    <div class="row">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Cancel", "Index", "Climate", null, new { @class = "btn btn-danger" })
    </div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

